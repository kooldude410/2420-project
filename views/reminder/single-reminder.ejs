<div class="container">
    <h1 class="page-header">Reminders</h1>

    <ul class="list-group">
        <li class="list-group-item">
            <h3><strong><%= reminderItem.title %>: </strong></h3>
            <h4>
                <%= reminderItem.description %>
            </h4>
            <h4>Completed:
                <% if (reminderItem.completed == true) { %>
                    <span class="label label-success">True</span>
                    <% } else if (reminderItem.completed == false) { %>
                        <span class="label label-danger">False</span>
                        <% } %>
            </h4>
            <a class="btn btn-warning" href=<%="/reminder/edit/" + reminderItem.id %>>Edit</a>

            <form class="deleteForm " method="POST" action=<%="/reminder/delete/" + reminderItem.id %>>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </li>
    </ul>
    <iframe width="600" height="450" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDgYLQLct7k8Sw6jDafCHuWoBwPTWw9OJ4
    &q=<%= reminderItem.description%>">

</div>